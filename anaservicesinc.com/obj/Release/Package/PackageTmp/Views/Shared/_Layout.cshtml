<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ANA Services, Inc.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container main">
    </div>

    <div class="logo hidden-xs">
        <div class="ribbon ribbon-left"></div>
        <div class="ribbon ribbon-bg"><span class="logo-title text-center">ANA SERVICES, INC.</span></div>
        <div class="text-center ribbon-caption">Residential &amp; Commercial Construction Services</div>
    </div>

    <div class="container main">
        <nav class="navbar navbar-inverse navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        <i class="glyphicon glyphicon-home pull-left"></i>
                        <span class="visible-xs pull-left">&nbsp;ANA</span>
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("Portfolio", "Portfolio")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container main">
        @RenderBody()
    </div>

        @*<div class="logo">
                <div class="ribbon ribbon-left"></div>
                <div class="ribbon ribbon-bg"><span class="logo-title text-center">ANA SERVICES, INC.</span></div>
            </div>*@

    <div class="container main">
        <footer>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>
                        &copy; ANA Services @DateTime.Now.Year
                        | Call <a href="tel:17166091126" class="phoneNumber">(716) 609-1126</a> or <a href="mailto:anainc@outlook.com" title="anainc@outlook.com" target="_blank">Email</a> us Today
                    </p>
                </div>
            </div>
        </footer>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
