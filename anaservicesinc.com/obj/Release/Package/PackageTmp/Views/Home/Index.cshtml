@{
    ViewBag.Title = "Construction Services";
}


<div class="row">
    <div class="col-md-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item">
                    <img src="/Content/images/portfolio/basement_01.jpg" alt="Basement Remodeling">
                    <div class="carousel-caption">Basement Remodeling</div>
                </div>
                <div class="item active">
                    <img src="/Content/images/portfolio/bathroom_01.jpg" alt="Bathroom Remodeling">
                    <div class="carousel-caption">Bathroom Remodeling</div>
                </div>
                <div class="item">
                    <img src="/Content/images/portfolio/bathroom_02.jpg" alt="Bathroom Remodeling">
                    <div class="carousel-caption text-primary">Bathroom Remodeling</div>
                </div>
                <div class="item">
                    <img src="/Content/images/portfolio/kitchen_01.jpg" alt="Kitchen Remodeling">
                    <div class="carousel-caption text-primary">Kitchen Remodeling</div>
                </div>
                <div class="item">
                    <img src="/Content/images/portfolio/landscape_01.jpg" alt="Retaining Walls">
                    <div class="carousel-caption text-primary">Retaining Walls</div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <br />
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="well text-center" style="font-size:1.2em">
            <div><i class="glyphicon glyphicon-phone"></i> Call us today at <a class="phoneNumber" href="tel:17166091126">(716) 609-1126</a> for a free estimate!</div>            
        </div>
    </div>
