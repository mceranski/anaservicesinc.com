<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="ANA - Commercial Construction Services">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans"/>

    <title>@ViewBag.Title - ANA Services, Inc.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container main">
        <div class="navbar">
            <img class="company-logo" src="/Content/images/logo_64.png"/>
            <div class="company-name">ANA Construction</div>
            <div class="company-subtext">Services, Inc.</div>
        </div>

        <nav class="navbar navbar-inverse navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        <i class="glyphicon glyphicon-home pull-left"></i>
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("Portfolio", "Portfolio")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container main">
        @RenderBody()
    </div>

    <div class="container main">
        <footer>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>
                        &copy; ANA Services @DateTime.Now.Year
                        | Call <a href="tel:17162200202" class="phoneNumber">(716) 220-0202</a>, Fax <a href="tel:17165688224" class="phoneNumber">(716) 568-8224</a> or <a href="mailto:anainc@outlook.com" title="anainc@outlook.com" target="_blank">Email</a> us Today
                        <br />90 Earhardt Drive - Suite #3, Williamsville, NY 14221                                                
                    </p>
                </div>
            </div>
        </footer>               
    </div>
    
    <div class="text-center" style="margin-top:15px;">
        <a target="_blank" title="ANA Services, Inc. BBB Business Review" href="http://www.bbb.org/upstate-new-york/business-reviews/contractors-general/ana-services-inc-in-williamsville-ny-235977147/#bbbonlineclick"><img alt="ANA Services, Inc. BBB Business Review" src="http://seal-upstateny.bbb.org/seals/blue-seal-120-61-ana-services-inc-l-p-235976854.png"></a>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-9792205-3', 'auto');
      ga('send', 'pageview');
    </script>
</body>
</html>
