                    <img src="/Content/images/portfolio/kitchen_01.jpg" alt="Kitchen Remodeling">
                    <div class="carousel-caption text-primary">Kitchen Remodeling</div>
                </div>
                <div class="item">
                    <img src="/Content/images/portfolio/landscape_01.jpg" alt="Retaining Walls">
                    <div class="carousel-caption text-primary">Retaining Walls</div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
